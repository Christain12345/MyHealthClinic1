@model MyHealthClinic.Models.Consult

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Are you sure you want to delete this consult?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AvailableTime.StartTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AvailableTime.StartTime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AvailableTime.EndTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AvailableTime.EndTime)
        </dd>

        <dt>
            Patient
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Patient.FirstName)
            @Html.DisplayFor(model => model.Patient.LastName)
        </dd>

        <dt>
            General Practitioner
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AvailableTime.GeneralPractioner.FirstName)
            @Html.DisplayFor(model => model.AvailableTime.GeneralPractioner.LastName)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "MyConsults")
        </div>
    }
</div>
